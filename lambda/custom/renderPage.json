{
    "type": "APL",
    "version": "1.0",
    "settings": {},
    "theme": "dark",
    "import": [
            { 
                "name" : "alexa-styles", 
                "version" : "1.0.0" 
            } 
        ],
    "resources": [
        { 
            "colors" : {
               "SkillBackgroundColor" : "blue" , 
               "SkillHighlightTextColor"  : "yellow" , 
               "SkillTextColor" : "white"
            }
        } 
        
        ],
    "styles": {
        
        
    },
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {
        "CenteredText" : 
        { 
            "parameters" :  [
                "text", 
                "speech", 
                "cid" 
                ] , 
            "item" : 
            {
                "id" : "${cid}" , 
                "type" : "Text", 
                "text" : "${text}", 
                "speech" : "${speech}", 
                "textAlign" : "center" , 
                "color" :  "@SkillTextColor" , 
                "width" : "50%", 
                "height" : "100%" , 
                "textAlignVertical": "center" ,  
                "fontSize" : "@fontSizeMedium" 
            }
        }, 
        "SkillLogo" : 
        { 
            "type" : "Frame" , 
            "item" : { 
                "type" : "Image" , 
                "source" : "" 
            } 
        } 
    },
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            { 
                "type" : "Frame" , 
                  "backgroundColor" : "@SkillBackgroundColor"  , 
                  "width" : "100vw" , 
                  "height" : "100vh" , 
                  "item" : { 
                    "type": "Pager",
                    "width" : "100vw" , 
                    "height" : "100vh" , 
                    "id" : "pagerId" ,    
                    "items": [
                        {
                            "type" : "Container" , 
                            "width" : "100vw" , 
                            "height" : "100vh" , 
                            "direction" : "row" , 
                            "items" : [ 
                            { 
                              
                            }, 
                            {
                                "when": "${@viewportProfile != @hubRoundSmall}",
                                "type" : "SkillLogo"  , 
                                "position" : "absolute" , 
                                "right" : "5vw" ,  
                                "top" : "5vh" , 
                                "width": "15vw" , 
                                "height" : "15vh"
                            }, 
                            { 
                                    "type" : "CenteredText" , 
                                    "text" : "${payload.phrase.teaser}<b><i>${payload.phrase.completion}</i></b>", 
                                    "width" : "80vw" , 
                                    "height" : "100vh" , 
                                    "paddingLeft" : "10vw", 
                                    "cid" : "text01" , 
                                    "speech" : "${payload.phrase.properties.phraseAsSpeech}"
                            } ]
                        }, 
                        {
                            "type" : "Container" , 
                            "width" : "100vw" , 
                            "height" : "100vh" , 
                            "direction" : "row" , 
                            "items" : [ 
                            { 
                              
                            }, 
                            {
                                "when": "${@viewportProfile != @hubRoundSmall}",
                                "type" : "SkillLogo"  , 
                                "position" : "absolute" , 
                                "right" : "5vw" ,  
                                "top" : "5vh" , 
                                "width": "15vw" , 
                                "height" : "15vh"
                            }, 
                            { 
                                    "type" : "CenteredText" , 
                                    "text" : "${payload.nextPhrase.properties.nextPhraseSI}", 
                                    "width" : "80vw" , 
                                    "height" : "100vh" , 
                                    "paddingLeft" : "10vw", 
                                    "speech" : "${payload.nextPhrase.properties.nextPhraseAsSpeech}", 
                                    "cid" : "text02"
                            } ]
                        }
                    ]
                }
            }
        ]
    }
}
